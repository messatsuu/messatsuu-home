<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Playground</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/tailwind.css') }}" type="text/css">
            {# <link rel="stylesheet" href="{{ asset('fontawesome/css/all.css') }}" type="text/css"> #}
        {% endblock %}

        {% block javascript %}
            <script src="{{ asset('build/main.js') }}"></script>
        {% endblock %}
    </head>
    <body class="text-gray-300 bg-gray-900" style="font-family: 'JetBrains Mono'">
        {% block base_body %}
            {% block navbar %}
                <nav class="px-2 mb-12 border-b-2 border-gray-800 rounded bg-gray-800/60 transition-colors hover:bg-gray-900 opacity-90 py-2.5">
                    <div class="container flex flex-wrap items-center justify-between mx-auto">
                        <a href="/" class="flex items-center">
                            <span class="self-center text-2xl font-semibold whitespace-nowrap transition-colors text-green-300">[ messatsuu ]</span>
                        </a>
                        <div class="flex flex-row items-stretch p-4 mt-0 rounded-lg h-14 space-x-8 text-md">
                            <a class="block py-2 pl-3 pr-4 text-gray-500 border-0 rounded transition-colors text-green-300 text-lg md:p-0" href="#">[ blog ]</a>
                        </div>
                    </div>
                </nav>
            {% endblock %}
            <div class="w-full mx-auto px-60">
                {% block content %}
                    {% block base_header %}
                    {% endblock %}

                    {% block base_content %}
                    {% endblock %}
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
